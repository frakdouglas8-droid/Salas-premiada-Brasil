// Função para buscar saldo do usuário
async function atualizarCarteira() {
    const response = await fetch('/api/usuario-saldo');
    const data = await response.json();
    document.getElementById('saldo').innerText = `R$ ${data.saldo.toFixed(2)}`;
}

// Atualiza a cada 5 segundos
setInterval(atualizarCarteira, 5000);
atualizarCarteira();
